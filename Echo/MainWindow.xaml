<Window x:Class="Echo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Echo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Start" HorizontalAlignment="Left" Margin="95,307,0,0" VerticalAlignment="Top" Width="63" Click="Button_Click"/>
        <Button Content="Record New" HorizontalAlignment="Left" Margin="608,217,0,0" VerticalAlignment="Top" Click="Record" Height="44" Width="120"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="470,347,0,0" VerticalAlignment="Top" Height="33" Width="77" Click="Save"/>
        <Button Name="BrowseButton"
            Content="Load"
            Click="BrowseButton_Click" Margin="440,208,222,164" />
        <Button Content="Stop" HorizontalAlignment="Left" Margin="223,307,0,0" VerticalAlignment="Top" Width="78" Click="ButtonStop_Click"/>
        <TextBox HorizontalAlignment="Left" Margin="575,355,0,0" TextWrapping="Wrap"   Text="{Binding NewOrcamName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ToolTip="Ocram name" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
